# ============================================
# APPLICATION CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# CRAWL DATABASE (PostgreSQL)
# ============================================
# Database dùng để quản lý crawl state (entities, migrations)
CRAWL_DB_HOST=localhost
CRAWL_DB_PORT=5432
CRAWL_DB_USERNAME=postgres
CRAWL_DB_PASSWORD=postgres
CRAWL_DB_DATABASE=crawl_database

# ============================================
# VNWA DATABASE (PostgreSQL - Laravel DB)
# ============================================
# Database của Laravel, chỉ dùng để INSERT/UPDATE manga, chapters, images
# KHÔNG chạy migrations ở đây
VNWA_DB_HOST=localhost
VNWA_DB_PORT=5432
VNWA_DB_USERNAME=postgres
VNWA_DB_PASSWORD=postgres
VNWA_DB_DATABASE=vnwa_database

# ============================================
# REDIS CONFIGURATION (for BullMQ)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# VNWA DEFAULT USER ID
# ============================================
# User ID mặc định khi insert/update vào vnwa database
# Luôn set manga.user_id = 1 và manga_chapter.user_id = 1
VNWA_DEFAULT_USER_ID=1

# ============================================
# BROWSER POOL CONFIGURATION
# ============================================
# Số lượng browser instances tối đa trong pool
MAX_BROWSERS=3

# ============================================
# CRAWL QUEUE CONFIGURATION
# ============================================
# Số lượng crawl jobs chạy song song (concurrency)
# Ảnh hưởng đến tốc độ crawl và tài nguyên server
# Khuyến nghị: 2-5 (tùy vào server mạnh/yếu)
CRAWL_CONCURRENCY=3

# ============================================
# MINIO CONFIGURATION
# ============================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY_ID=vnwaadmin
MINIO_SECRET_ACCESS_KEY=vnwa123456
MINIO_BUCKET=vnwa
MINIO_REGION=us-east-1
MINIO_USE_PATH_STYLE_ENDPOINT=true
MINIO_URL=http://localhost:9000
